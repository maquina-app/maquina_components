<%# locals: (title:, description: nil, icon: "folder-open", action: nil, container_class: "", compact: false) -%>

<div
  class="<%= class_names(compact ? "px-6 py-8" : "px-6 py-12", "text-center", container_class) %>"
>
  <div class="text-muted-foreground">
    <% case icon %>
    <% when "folder-open" %>
      <svg
        class="<%= class_names("mx-auto text-muted-foreground/60", compact ? "h-8 w-8" : "h-12 w-12") %>"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"
        />
      </svg>
    <% when "inbox" %>
      <svg
        class="<%= class_names("mx-auto text-muted-foreground/60", compact ? "h-8 w-8" : "h-12 w-12") %>"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
        />
      </svg>
    <% when "search" %>
      <svg
        class="<%= class_names("mx-auto text-muted-foreground/60", compact ? "h-8 w-8" : "h-12 w-12") %>"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
        />
      </svg>
    <% when "users" %>
      <svg
        class="<%= class_names("mx-auto text-muted-foreground/60", compact ? "h-8 w-8" : "h-12 w-12") %>"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
        />
      </svg>
    <% when "clipboard-list" %>
      <svg
        class="<%= class_names("mx-auto text-muted-foreground/60", compact ? "h-8 w-8" : "h-12 w-12") %>"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
        />
      </svg>
    <% when "chat" %>
      <svg
        class="<%= class_names("mx-auto text-muted-foreground/60", compact ? "h-8 w-8" : "h-12 w-12") %>"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
        />
      </svg>
    <% else %>
      <%# Allow custom SVG or icon HTML to be passed %>
      <%= icon %>
    <% end %>

    <h3
      class="<%= class_names("mt-2 font-medium text-foreground", compact ? "text-sm" : "text-base") %>"
    >
      <%= title %>
    </h3>

    <% if description.present? %>
      <p class="mt-1 text-sm text-muted-foreground">
        <%= description %>
      </p>
    <% end %>

    <% if action.present? %>
      <div class="<%= class_names(compact ? "mt-4" : "mt-6") %>">
        <%= action %>
      </div>
    <% end %>
  </div>
</div>
