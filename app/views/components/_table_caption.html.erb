<%# locals: (css_classes: nil, **html_options) %>
<%
  data_attrs = { table_part: "caption" }
  data_attrs.merge!(html_options.delete(:data) || {})
  html_options[:data] = data_attrs
  html_options[:class] = css_classes if css_classes
%>
<caption <%= tag.attributes(html_options) %>>
  <%= yield if block_given? %>
</caption>
