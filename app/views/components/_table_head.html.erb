<%# locals: (css_classes: nil, scope: "col", **html_options) %>
<%
  data_attrs = { table_part: "head" }
  data_attrs.merge!(html_options.delete(:data) || {})
  html_options[:data] = data_attrs
  html_options[:class] = css_classes if css_classes
  html_options[:scope] = scope if scope
%>
<th <%= tag.attributes(html_options) %>>
  <%= yield if block_given? %>
</th>
